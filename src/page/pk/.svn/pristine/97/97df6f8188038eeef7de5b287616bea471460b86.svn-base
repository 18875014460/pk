.sy-pk-grad {
    position: absolute;
    top: 0;
    bottom: 10px;
    left: 10px;
    right: 0;
}

.sy-body-left .sy-pk-grad {
    border-width: 1px;
    border-style: solid
}

.sy-pk-title {
    line-height: 40px;
    overflow: hidden;
    padding: 0 1em;
}

.sy-pk-title>span {
    font-weight: 700;
}

.sy-pk-title .sy-rf label {
    margin-left: 10px;
}

.sy-pk-cont {
    position: absolute;
    top: 40px;
    bottom: 0;
    left: 1px;
    right: 0;
    overflow: hidden
}

.sy-body-right .sy-pk-cont {
    overflow: auto
}

.sy-body-right .sy-pk-grad {
    right: 10px
}

.sy-pk-list {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    overflow: auto
}

.sy-pk-cont .el-checkbox {
    display: block;
    margin-left: 15px;
    line-height: 30px
}

.sy-pk-condition .el-select,
.sy-pk-condition .el-radio-group {
    margin: 5px auto;
    display: block
}

.sy-pk-condition .el-radio-group {
    width: 171px;
}

.sy-pk .sy-row .sy-rf.el-button {
    margin-top: 5px;
    margin-left: 10px
}

.sy-pk-week .el-input {
    width: auto
}

.sy-pk .sy-pk-tkdk .el-collapse-item__header{
    height: 32px;
    line-height: 32px;
}

.sy-pk .sy-pk-tkdk .el-collapse-item__content{
    padding: 5px;
}
.sy-pk .sy-pk-tkdk .el-form-item{
    margin-bottom: 0px;
}

.sy-pk .sy-pk-tkdk .el-form-item__label{
    padding: 11px 3px 11px 0;
}

.el-dropdown-menu .el-collapse {
    border: none;
}

.el-dropdown-menu .el-collapse-item__header {
    border: none;
    height: 32px;
    line-height: 32px;
}
.el-dropdown-menu .el-collapse-item__content{
    padding: 0;
}
.el-dropdown-menu .el-dropdown-menu__item{
    padding-left: 30px;
}
.mix .sy-tree-node__content .el-checkbox{
    width:22px;
    display:inline-block;
    margin: 0
}